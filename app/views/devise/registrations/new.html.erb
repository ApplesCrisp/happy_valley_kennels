<div class="content-container content-container-create-user">
  <div class="sign-in-div div-padding dark-background-div border-radius col-sm-10 col-lg-7 col-xl-8">
    <h1>Sign up</h1>
    <hr/>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), wrapper: :floating_labels_form) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <div class="row">
          <div class="col-lg-12">
            <%= f.input :name,
            required: true,
            autofocus: true %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <%= f.input :address,
            required: false,
            autofocus: true %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-5">
            <%= f.input :city,
            required: false,
            autofocus: true %>
          </div>
          <div class="col-lg-3">
            <%= f.input :province,
            required: false,
            autofocus: true %>
          </div>
          <div class="col-lg-4">
            <%= f.input :postalcode,
            required: false,
            autofocus: true %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-6">
            <%= f.input :phone,
            required: true,
            autofocus: true %>
          </div>
          <div class="col-lg-6">
            <%= f.input :email,
                required: true,
                input_html: { autocomplete: "email" }%>
          </div>
        </div>
        <%= f.input :password,
                required: true,
                input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
      </div>
      <div class="center-content">
        <%= f.button :button, "Sign Up", type: :submit, class: "btn btn-lg btn-primary cool-beans-common cool-beans-style-primary sign-in-button" %>
        <br/>
        <%= link_to "Sign In", user_session_path, class: "link-forms link-common" %>
      </div>
    <% end %>
  </div>
</div>
</div>
