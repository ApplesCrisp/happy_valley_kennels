<div id="<%= dom_id pet %>" class="pet-box col-lg-12 row">
  <div class="col-xs-3 col-md-4 center-content">
    <%= link_to edit_pet_path(pet), class: "update-profile link-forms" do %>
      <%= image_tag "pet_profile.png", class: "pet-profile-default" %>
      <p>Update</p>
    <% end %>
  </div>
  <div class="col-xs-6 col-md-8 pet-description">
    <h1>
      <%= pet.name %>
    </h1>
    <p>
      <%= pet.sex.casecmp("M") == 0 ? "Male" : "Female" %> - <%= pet.breed %>
    </p>
    <p>
      <%= pet.age %> years old
    </p>
  </div>
</div>
