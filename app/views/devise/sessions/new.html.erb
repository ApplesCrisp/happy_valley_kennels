<div class="splash_page content-container">
  <div class="center_content div_padding dark_background_div border_radius">
    <%= image_tag "hvk_logo.png", class: "simple_logo" %>
    <h1>Sign In</h1>
    <%= simple_form_for(:user, url: session_path(:user), wrapper: :floating_labels_form) do |f| %>
      <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      <div class="center_content">
        <%= f.button :submit, "Sign In", class: "btn btn-lg btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
