
<%= simple_form_for(@booking) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.collection_check_boxes :pet_ids, @pets, :id, :name, include_hidden: false do |b| %>
      <%= b.label %>
      <%= b.check_box checked: true  %>
    <% end %>
    <%= f.input :booking_type %>
    <%= f.input :booking_start_date %>
    <%= f.input :booking_end_date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
